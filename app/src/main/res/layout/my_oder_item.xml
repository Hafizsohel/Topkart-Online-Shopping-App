<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:elevation="4dp"
    android:layout_margin="5dp">



    <LinearLayout
        android:padding="7dp"
        android:background="#8BF88F"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2sp"
                android:layout_margin="4sp"
                android:layout_weight="1"
                android:fontFamily="@font/amethysta"
                android:text="Subtotal: "
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subtotal_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/amethysta"
                android:text="Subtotal: "
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2sp"
                android:layout_margin="4sp"
                android:layout_weight="1"
                android:fontFamily="@font/amethysta"
                android:text="Cart Amount: "
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cart_amount_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/amethysta"
                android:text="Cart Amount: "
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/shipping_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2sp"
                android:layout_margin="4sp"
                android:layout_weight="1"
                android:fontFamily="@font/amethysta"
                android:text="Shipping Cost: "
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shipping_cost_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/amethysta"
                android:text="Shipping Cost: "
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:id="@+id/divider6"
            android:layout_width="430dp"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shipping_c" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2sp"
                android:layout_margin="4sp"
                android:layout_weight="1"
                android:fontFamily="@font/amethysta"
                android:text="Total Price: "
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_price_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/amethysta"
                android:text="Total Price: "
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>